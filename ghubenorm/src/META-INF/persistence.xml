<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="gitenorm">
		<class>model.Repo</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />		
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/posdoc"/>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
			<property name="hibernate.connection.username" value="pdoc"/>
			<!-- <property name="hibernate.connection.password" value="**DO NOT PUT A PASSWORD HERE**"/>  -->
			<property name="hibernate.hbm2ddl.auto" value="update"/> 
			<!--<property name="hibernate.hbm2ddl.auto" value="create-drop"/> -->
			
        </properties>		
	</persistence-unit>
</persistence>
